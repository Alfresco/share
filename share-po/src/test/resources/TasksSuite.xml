<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Tasks Suite" verbose="6" preserve-order="true" parallel="classes" thread-count="1">
    <groups>
        <run>
            <exclude name="bug"/>
            <exclude name="chromeOnly"/>
            <exclude name="Hybrid"/>
            <exclude name="download"/>
            <exclude name="NonGrid"/>
            <exclude name="Cloud-only"/>
        </run>
    </groups>

    <test name="EditTaskPageTest">
        <classes>
            <class name="org.alfresco.po.share.task.EditTaskPageTest" />
        </classes>
    </test>
    <test name="TaskDetailsTest">
        <classes>
            <class name="org.alfresco.po.share.task.TaskDetailsTest" />
        </classes>
    </test>
    <test name="TaskStatusTest">
        <classes>
            <class name="org.alfresco.po.share.task.TaskStatusTest" />
        </classes>
    </test>
</suite>
