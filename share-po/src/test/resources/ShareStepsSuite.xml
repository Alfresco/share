<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Share Steps Suite" verbose="6" preserve-order="true" parallel="classes" thread-count="1">
	<groups>
		<run>
			<exclude name="bug"/>
			<exclude name="chromeOnly"/>
			<exclude name="Hybrid"/>
			<exclude name="download"/>
			<exclude name="NonGrid"/>
			<exclude name="Cloud-only"/>
		</run>
	</groups>

	<test name="AdminActionsTest">
		<classes>
			<class name="org.alfresco.po.share.steps.AdminActionsTest" />
		</classes>
	</test>
	<test name="DashBoardActionsTest">
		<classes>
			<class name="org.alfresco.po.share.steps.DashBoardActionsTest" />
		</classes>
	</test>
	<test name="UserProfileActionsTest">
		<classes>
			<class name="org.alfresco.po.share.steps.UserProfileActionsTest" />
		</classes>
	</test>
	<test name="SiteActionsTest">
		<classes>
			<class name="org.alfresco.po.share.steps.SiteActionsTest" />
		</classes>
	</test>
</suite>
