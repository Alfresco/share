<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Search Suite" verbose="1" preserve-order="true" parallel="classes" thread-count="1">
    <groups>
        <run>
            <exclude name="bug"/>
            <exclude name="chromeOnly"/>
            <exclude name="Hybrid"/>
            <exclude name="download"/>
            <exclude name="NonGrid"/>
            <exclude name="Cloud-only"/>
        </run>
    </groups>

	<test name="AdvanceSearchContentTest">
    	<classes>
            <class name="org.alfresco.po.share.search.AdvanceSearchContentTest" />
    	</classes>
    </test>
    <test name="FacetedSearchBulkActionsTest">
        <classes>
            <class name="org.alfresco.po.share.search.FacetedSearchBulkActionsTest" />
        </classes>
    </test>
    <test name="FacetedSearchHighlightedTermTest1">
        <classes>
            <class name="org.alfresco.po.share.search.FacetedSearchHighlightedTermTest1" />
        </classes>
    </test>
    <test name="FacetedSearchHighlightedTermTest2">
        <classes>
            <class name="org.alfresco.po.share.search.FacetedSearchHighlightedTermTest2" />
        </classes>
    </test>
</suite>
